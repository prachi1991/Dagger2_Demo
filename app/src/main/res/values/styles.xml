<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowSoftInputMode">stateHidden</item>
        <item name="android:colorBackground">@color/color_window_background</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:statusBarColor">@color/color_status_bar</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:navigationBarColor">@color/color_navigation_bar</item>
        <item name="editTextColor">@color/color_text</item>
    </style>


    <style name="Base.Theme.AppTheme.NavigationView" parent="Base.Theme.AppTheme">
        <item name="listPreferredItemHeightSmall">@dimen/_30sdp</item>
    </style>

    <style name="Base.Theme.AppTheme.menutitle" parent="TextAppearance.AppCompat.Medium">
        <item name="fontPath">@string/font_play_bold</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="Base.Theme.AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Base.Theme.AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <string name="font_play_bold">\@fonts/Play-Bold.ttf</string>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_right</item>
        <item name="android:windowExitAnimation">@anim/slide_out_right</item>
    </style>

</resources>
