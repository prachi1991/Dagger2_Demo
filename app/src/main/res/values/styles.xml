<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowSoftInputMode">stateHidden</item>
        <item name="android:colorBackground">@color/color_window_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
        <item name="editTextColor">@color/white</item>
    </style>

    -

    <style name="Regular">

        <item name="android:fontFamily">@font/play_bold</item>

        <item name="android:textStyle">normal</item>

        <item name="android:textSize">28sp</item>

        <item name="android:text">sans-serif</item>

    </style>
    <style name="Base.Theme.AppTheme.progressbar">
        <item name="colorAccent">@color/colorPrimary</item> <!-- Whatever color you want-->
    </style>

    <style name="Base.Theme.AppTheme.menutitle" parent="TextAppearance.AppCompat.Medium">
        <item name="fontPath">@string/font_play_bold</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="Base.Theme.AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Base.Theme.AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Base.Theme.AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <string name="font_play_bold">\@fonts/Play-Bold.ttf</string>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_right</item>
        <item name="android:windowExitAnimation">@anim/slide_out_right</item>
    </style>

</resources>
