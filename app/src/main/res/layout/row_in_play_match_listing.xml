<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/backgroud_solid_dark_grey"
            android:orientation="vertical"
            android:padding="@dimen/_3sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/backgroud_solid_light_grey"
                >

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtMatchName"
                    fontPath="fonts/Play-Bold.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:text="@string/even"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp"
                    android:layout_marginTop="@dimen/_3sdp"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtMatchStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_light_green"
                    android:text="@string/live"
                    android:layout_below="@id/txtMatchName"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:textSize="@dimen/_12ssp"
                    android:layout_marginTop="@dimen/_5sdp"
                    fontPath="fonts/Play-Regular.ttf"
                    android:visibility="gone"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtMatchDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_grey"
                    tools:text="@string/live"
                    android:layout_below="@id/txtMatchName"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:textSize="@dimen/_12ssp"
                    android:layout_marginTop="@dimen/_5sdp"
                    fontPath="fonts/Play-Regular.ttf"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_light_green"
                    android:text="@string/join_now"
                    android:layout_below="@id/txtMatchName"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:textSize="@dimen/_12ssp"
                    android:layout_marginTop="@dimen/_25sdp"
                    fontPath="fonts/Play-Regular.ttf"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    />



            </RelativeLayout>




        </LinearLayout>
    </FrameLayout>
</layout>