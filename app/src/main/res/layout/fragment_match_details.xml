<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_10sdp"
            tools:context=".ui.match.details.MatchDetailsFragment">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/backgroud_solid_primary"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivWinner"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:background="@drawable/shape_circle_secondary"
                        android:padding="@dimen/_3sdp"
                        android:src="@drawable/ic_trophy" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvContest"
                        fontPath="fonts/Play-Bold.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_toEndOf="@id/ivWinner"
                        android:text="Test Contest"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/_12sdp" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvMyBets"
                        fontPath="fonts/Play-Bold.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_toEndOf="@id/tvContest"
                        android:text="My Bets"
                        android:textColor="@color/menu_light_green"
                        android:textSize="@dimen/_12sdp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvUserCount"
                        fontPath="fonts/Play-Bold.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_toStartOf="@id/ivLive"
                        android:text="1 Users"
                        android:textColor="@color/text_color_grey"
                        android:textSize="@dimen/_10sdp" />


                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivLive"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/shape_circle_secondary"
                        android:padding="@dimen/_3sdp"
                        android:src="@drawable/ic_live" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/backgroud_solid_white"
                    android:orientation="vertical"
                    android:padding="@dimen/_3sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginEnd="@dimen/_2sdp"
                            android:layout_weight="1"
                            android:background="@drawable/backgroud_solid_secondary"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatTextView
                                fontPath="fonts/Play-Bold.ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:text="IND"
                                android:textColor="@color/menu_light_green"
                                android:textSize="@dimen/_10ssp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                fontPath="fonts/Play-Regular.ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:text="25/0 (1.4OVS)"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_10ssp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:layout_weight="1"
                            android:background="@drawable/backgroud_solid_secondary"
                            android:gravity="center_vertical|right"
                            android:orientation="vertical">


                            <androidx.appcompat.widget.AppCompatTextView
                                fontPath="fonts/Play-Bold.ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:text="PAK"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_12ssp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                fontPath="fonts/Play-Regular.ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:text="Bowling..."
                                android:textColor="@color/white"
                                android:textSize="@dimen/_10ssp" />

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        fontPath="fonts/Play-Bold.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginEnd="@dimen/_2sdp"
                        android:background="@drawable/backgroud_solid_dark_grey"
                        android:gravity="center"
                        android:text="BET OPEN"
                        android:textSize="@dimen/_16ssp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/backgroud_solid_dark_grey"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp">

                    <androidx.appcompat.widget.AppCompatTextView
                        fontPath="fonts/Play-Regular.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:text="@string/all"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10ssp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="@color/white" />


                    <androidx.appcompat.widget.AppCompatTextView
                        fontPath="fonts/Play-Regular.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/market"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10ssp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="@color/white" />


                    <androidx.appcompat.widget.AppCompatTextView
                        fontPath="fonts/Play-Regular.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/session"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10ssp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="@color/white" />


                    <androidx.appcompat.widget.AppCompatTextView
                        fontPath="fonts/Play-Regular.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/even_odd"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10ssp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="@color/white" />

                    <androidx.appcompat.widget.AppCompatTextView
                        fontPath="fonts/Play-Regular.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ending_digit"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10ssp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="@color/white" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/backgroud_solid_dark_grey"
                    android:orientation="vertical"
                    android:padding="@dimen/_3sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/backgroud_round_header_background"
                        android:padding="@dimen/_5sdp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvMarketLabel"
                            fontPath="fonts/Play-Regular.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:text="Market |"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10ssp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvMarketType"
                            fontPath="fonts/Play-Regular.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_toRightOf="@+id/tvMarketLabel"
                            android:text="Match Winner"
                            android:textColor="@color/text_light_green"
                            android:textSize="@dimen/_10ssp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            fontPath="fonts/Play-Regular.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:text="0"
                            android:textColor="@color/text_light_green"
                            android:textSize="@dimen/_10ssp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:background="@drawable/backgroud_solid_light_grey"
                        android:padding="@dimen/_5sdp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvMatchTeam1"
                            fontPath="fonts/Play-Regular.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:text="IND_DEMO1"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10ssp" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvTeam1Lay"
                            fontPath="fonts/Play-Regular.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_toStartOf="@id/tvTeam1Back"
                            android:background="@drawable/backgroud_solid_dark_blue"
                            android:paddingLeft="@dimen/_10sdp"
                            android:paddingTop="@dimen/_3sdp"
                            android:paddingRight="@dimen/_10sdp"
                            android:paddingBottom="@dimen/_3sdp"
                            android:text="1.2"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10ssp" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvTeam1Back"
                            fontPath="fonts/Play-Regular.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:background="@drawable/backgroud_solid_light_blue1"
                            android:paddingLeft="@dimen/_10sdp"
                            android:paddingTop="@dimen/_3sdp"
                            android:paddingRight="@dimen/_10sdp"
                            android:paddingBottom="@dimen/_3sdp"
                            android:text="1.2"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10ssp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:background="@drawable/backgroud_solid_light_grey"
                        android:padding="@dimen/_5sdp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvMatchTeam2"
                            fontPath="fonts/Play-Regular.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:text="IND_DEMO2"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10ssp" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvTeam2Lay"
                            fontPath="fonts/Play-Regular.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_toStartOf="@id/tvTeam2Back"
                            android:background="@drawable/backgroud_solid_dark_blue"
                            android:paddingLeft="@dimen/_10sdp"
                            android:paddingTop="@dimen/_3sdp"
                            android:paddingRight="@dimen/_10sdp"
                            android:paddingBottom="@dimen/_3sdp"
                            android:text="1.2"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10ssp" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvTeam2Back"
                            fontPath="fonts/Play-Regular.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:background="@drawable/backgroud_solid_light_blue1"
                            android:paddingLeft="@dimen/_10sdp"
                            android:paddingTop="@dimen/_3sdp"
                            android:paddingRight="@dimen/_10sdp"
                            android:paddingBottom="@dimen/_3sdp"
                            android:text="1.2"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10ssp" />

                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/backgroud_solid_dark_grey"
                    android:orientation="vertical"
                    android:padding="@dimen/_3sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/backgroud_round_header_background"
                        android:padding="@dimen/_5sdp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvSessionLabel"
                            fontPath="fonts/Play-Regular.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:text="@string/session"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10ssp" />
                    </RelativeLayout>
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvSession"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="1"
                    tools:listitem="@layout/item_session_list" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvEvenOdd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="1"
                    tools:listitem="@layout/item_even_odd_list" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/backgroud_solid_dark_grey"
                    android:orientation="vertical"
                    android:padding="@dimen/_3sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/backgroud_round_header_background"
                        android:padding="@dimen/_5sdp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvEndingDigitLabel"
                            fontPath="fonts/Play-Regular.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:text="Market |"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10ssp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvEvenOddType"
                            fontPath="fonts/Play-Regular.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_toEndOf="@+id/tvEndingDigitLabel"
                            android:text="IND 1 Over Ending Digit"
                            android:textColor="@color/text_light_green"
                            android:textSize="@dimen/_10ssp" />

                    </RelativeLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvEndingDigit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:itemCount="1"
                        tools:listitem="@layout/item_ending_digit_list" />

                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</layout>
