<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.create_bet.CreateBetFragment">

    <data></data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/_50sdp">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp">

                <TextView
                    fontPath="fonts/Play-Regular.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Place your Bet"
                    android:textSize="@dimen/_12ssp" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_close" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:background="@color/menu_light_green" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/dark_grey"
                android:padding="@dimen/_8sdp">

                <TextView
                    fontPath="fonts/Play-Bold.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Even"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16ssp" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lagaiLabel"
                        fontPath="fonts/Play-Bold.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Lagai"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12ssp" />

                    <TextView
                        fontPath="fonts/Play-Bold.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.95"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_16ssp" />

                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/white" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/dark_grey"
                android:padding="@dimen/_8sdp">

                <TextView
                    fontPath="@fonts/Play-Regular.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Market"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp" />

                    <TextView
                        fontPath="fonts/Play-Bold.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="even_odd"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12ssp" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/white" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:background="@color/dark_grey">

                <RelativeLayout
                    android:id="@+id/minusLayout"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_toLeftOf="@+id/countLayout"
                    android:background="@color/black"
                    android:layout_centerInParent="true">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="-"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_20ssp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/countLayout"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_centerInParent="true"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/tvCount"
                        fontPath="fonts/Play-Bold.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/green"
                        android:text="0"
                        android:layout_centerInParent="true"
                        android:maxLines="1"
                        android:singleLine="true"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/plusLayout"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_toRightOf="@+id/countLayout"
                    android:background="@color/black"
                    android:layout_centerInParent="true">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="+"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_20ssp"/>

                </RelativeLayout>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/white" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/dark_grey"
                android:padding="@dimen/_8sdp">

                <TextView
                    android:id="@+id/returnLabel"
                    fontPath="@fonts/Play-Regular.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Return |"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    fontPath="@fonts/Play-Regular.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/_3sdp"
                    android:layout_toRightOf="@+id/returnLabel"
                    android:text="0"
                    android:layout_centerInParent="true"
                    android:textColor="@color/text_light_green"
                    android:textSize="@dimen/_12ssp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:background="@color/dark_grey">

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:background="@drawable/green_button_border"
                    android:text="Place Bet"
                    android:textAllCaps="false"
                    fontPath = "@fonts/Play-Regular.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:text="Clear Bet"
                    android:textAllCaps="false"
                    fontPath = "@fonts/Play-Regular.ttf"
                    android:background="@drawable/red_button_border"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/white" />

            <LinearLayout
                android:id="@+id/ll_inplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/backgroud_solid_dark_grey"
                android:orientation="vertical"
                android:padding="@dimen/_3sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/backgroud_round_header_background"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp">

                    <View
                        android:layout_width="2dp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:background="@color/text_light_green" />

                    <androidx.appcompat.widget.AppCompatTextView
                        fontPath="fonts/Play-Regular.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:text="Live Matches"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12ssp" />

                </LinearLayout>

                <com.ballchalu.utils.NonScrollRecyclerView
                    android:id="@+id/rvInPlayMatchListing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="1"
                    tools:listitem="@layout/row_bet_live_play_match" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_upcoming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/backgroud_solid_dark_grey"
                android:orientation="vertical"
                android:padding="@dimen/_3sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/backgroud_round_header_background"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp">

                    <View
                        android:layout_width="2dp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:background="@color/text_light_green" />

                    <androidx.appcompat.widget.AppCompatTextView
                        fontPath="fonts/Play-Regular.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:text="@string/upcoming"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12ssp" />

                </LinearLayout>

                <com.ballchalu.utils.NonScrollRecyclerView
                    android:id="@+id/rvUpcomingMatchListing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="1"
                    tools:listitem="@layout/row_bet_live_play_match" />

            </LinearLayout>

        </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>
</layout>