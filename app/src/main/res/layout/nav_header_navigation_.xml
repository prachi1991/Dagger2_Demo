<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingRight="@dimen/_10sdp">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ivCloseDrawer"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_close" />

        <LinearLayout
            android:id="@+id/llEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvNavEmail"
                fontPath="fonts/Play-Regular.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:text="abc@gmail.com |"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/tvMoneyValue"
                fontPath="fonts/Play-Bold.ttf"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="840"
                android:textColor="@color/text_light_green" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            fontPath="fonts/Play-Bold.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llEmail"
            android:layout_alignParentEnd="true"
            android:text="@string/bc_money"
            android:textColor="@color/text_light_green" />

    </RelativeLayout>
</layout>
