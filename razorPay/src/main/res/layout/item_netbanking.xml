<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:id="@+id/rl_netbank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_stroke_fillwhite"
        android:orientation="vertical"

        >

        <LinearLayout
            android:id="@+id/ll_bank"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_gravity="center"
                android:layout_weight=".4"

                android:src="@drawable/ic_axis_bank_logo" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvName"
                fontPath="fonts/Roboto_Medium.ttf"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".6"
                android:gravity="left|center"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                tools:text="State bank" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/ll_bank"

            android:background="@color/light_grey" />
    </RelativeLayout>


</layout>